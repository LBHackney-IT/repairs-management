<div class="hackney-search">
  <h1 class=govuk-heading-m>Find repair job or property</h1>
  <%= form_tag search_work_orders_path do %>
    <div class="govuk-form-group">
      <%= label_tag 'ref', 'Search by work order reference, postcode or address
    ', class: 'govuk-label' %>
      <%= search_field_tag 'ref', '', class: 'govuk-input govuk-input--width-10 hackney-focus-colour' %>
    </div>
    <%= submit_tag 'Search', class: 'govuk-button hackney-focus-colour' %>
  <% end %>
</div>
