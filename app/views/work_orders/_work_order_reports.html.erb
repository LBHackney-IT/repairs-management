<div class="govuk-tabs__panel hackney-work-order-tabs-info" id="work-order-reports">
  <h2 class='govuk-heading-l'>
    Work order reports
  </h2>

  <% if reports.any? %>
    <p class="govuk-body-m">
      You must be signed into the internal network to view the reports
    </p>

    <ul class="govuk-list work-order-reports-list">
      <% reports.each do |report| %>
        <li>
          <div class="govuk-body work-order-reports">
            <%= link_to image_tag('pdf-icon.png'), report, target: "_blank", class: 'work-order-report-pdf-icon' %>
            <div class="work-order-report-link">
              <%= link_to report, report, target: "_blank" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

  <% else %>
    <p class='govuk-body-s'>There are no reports for this work order</p>
  <% end %>
</div>
